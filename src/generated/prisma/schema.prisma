generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  progress Progress?
}

model Topic {
  id       Int    @id @default(autoincrement())
  topic    String
  subtopic String
  level    String
  status   String

  doneBy   Progress[] @relation("DoneTopics")
  undoneBy Progress[] @relation("UndoneTopics")
}

model Progress {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  done   Topic[] @relation("DoneTopics")
  undone Topic[] @relation("UndoneTopics")
}
